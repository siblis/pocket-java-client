<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="450.0" prefWidth="750.0"
            stylesheets="/client/styles/ChatStyle.css" xmlns="http://javafx.com/javafx/10.0.1"
            fx:controller="client.view.ChatViewController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Меню">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleDisconnectButton" text="Отключиться..."/>
                        <SeparatorMenuItem/>
                        <MenuItem mnemonicParsing="false" text="Профиль"/>
                        <MenuItem mnemonicParsing="false" text="Настройки связи"/>
                        <MenuItem mnemonicParsing="false" text="Настройки внешнего вида"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Выход"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Contacts">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleAddContactButton" text="Add Contact"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <AnchorPane fx:id="messagePanel" prefHeight="400.0" prefWidth="750.0" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <SplitPane dividerPositions="0.7" layoutX="146.0" layoutY="159.0" maxHeight="1.7976931348623157E308"
                           maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
                           orientation="VERTICAL" prefHeight="400.0" prefWidth="750.0" AnchorPane.bottomAnchor="0.0"
                           AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <items>
                        <AnchorPane>
                            <children>
                                <SplitPane dividerPositions="0.8" layoutX="214.0" layoutY="59.0" prefHeight="209.0"
                                           prefWidth="258.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                           AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <items>
                                        <AnchorPane fx:id="webViewPane" minHeight="50.0" minWidth="50.0">
                                            <children>
                                                <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER"
                                                            pannable="true" AnchorPane.bottomAnchor="0.0"
                                                            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                                            AnchorPane.topAnchor="0.0">
                                                    <content>
                                                        <WebView fx:id="messageWebView" minHeight="50.0" minWidth="50.0"
                                                                 prefHeight="272.0" prefWidth="577.0"/>
                                                    </content>
                                                </ScrollPane>
                                            </children>
                                        </AnchorPane>
                                        <AnchorPane minHeight="50.0" minWidth="50.0">
                                            <children>
                                                <ListView fx:id="contactListView" onMouseClicked="#handleClientChoice"
                                                          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                                          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                                            </children>
                                        </AnchorPane>
                                    </items>
                                </SplitPane>
                            </children>
                        </AnchorPane>
                        <AnchorPane styleClass="tab-pane">
                            <VBox prefHeight="200.0" prefWidth="190.0" AnchorPane.bottomAnchor="10.0"
                                  AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
                                  AnchorPane.topAnchor="10.0">
                                <children>
                                    <Label prefHeight="17.0" prefWidth="224.0" text="Ctrl+Enter send message"/>
                                    <TextArea fx:id="messageField" wrapText="true">
                                        <VBox.margin>
                                            <Insets top="5.0"/>
                                        </VBox.margin>
                                    </TextArea>
                                    <ButtonBar prefHeight="40.0" prefWidth="145.0">
                                        <buttons>
                                            <Button contentDisplay="RIGHT" graphicTextGap="0.0" mnemonicParsing="false"
                                                    onAction="#handleSendMessage" prefHeight="25.0" prefWidth="90.0"
                                                    text="Send"/>
                                            <Button mnemonicParsing="false" onAction="#handleExit" prefHeight="25.0"
                                                    text="Exit"/>
                                        </buttons>
                                        <padding>
                                            <Insets right="10.0"/>
                                        </padding>
                                        <VBox.margin>
                                            <Insets top="15.0"/>
                                        </VBox.margin>
                                    </ButtonBar>
                                </children>
                            </VBox>
                        </AnchorPane>
                    </items>
                </SplitPane>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
